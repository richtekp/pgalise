<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                            http://java.sun.com/xml/ns/javaee/ejb-jar_3_1.xsd"
	version="3.1">
	<enterprise-beans>
		<session>
			<ejb-name>de.pgalise.simulation.energy.EnergyConsumptionManager</ejb-name>
			<business-local>de.pgalise.simulation.energy.EnergyConsumptionManagerLocal</business-local>
			<business-remote>de.pgalise.simulation.energy.EnergyConsumptionManager</business-remote>
			<ejb-class>de.pgalise.simulation.energy.internal.FuzzyEnergyConsumptionManager</ejb-class>
			<session-type>Stateful</session-type>
			<init-on-startup>true</init-on-startup>
			<transaction-type>Container</transaction-type>
		</session>
		<session>
			<ejb-name>de.pgalise.simulation.energy.EnergyEventStrategy</ejb-name>
			<business-local>de.pgalise.simulation.energy.EnergyEventStrategyLocal</business-local>
			<business-remote>de.pgalise.simulation.energy.EnergyEventStrategy</business-remote>
			<ejb-class>de.pgalise.simulation.energy.internal.DefaultEnergyEventStrategy</ejb-class>
			<session-type>Stateful</session-type>
			<init-on-startup>true</init-on-startup>
			<transaction-type>Container</transaction-type>
		</session>
		<session>
			<ejb-name>de.pgalise.simulation.energy.profile.EnergyProfileLoader</ejb-name>
			<business-local>de.pgalise.simulation.energy.profile.EnergyProfileLoaderLocal</business-local>
			<business-remote>de.pgalise.simulation.energy.profile.EnergyProfileLoader</business-remote>
			<ejb-class>de.pgalise.simulation.energy.internal.profile.CSVProfileLoader</ejb-class>
			<session-type>Stateful</session-type>
			<init-on-startup>true</init-on-startup>
			<transaction-type>Container</transaction-type>
		</session>
	</enterprise-beans>
</ejb-jar>