<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence"               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"               xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence   http://www.oracle.com/webfolder/technetwork/jsc/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="pgalise-shared" transaction-type="JTA">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <jta-data-source>jdbc/pgalise</jta-data-source>
    <class>de.pgalise.simulation.operationCenter.internal.model.sensordata.GPSSensorData</class>
    <class>de.pgalise.simulation.operationCenter.internal.model.sensordata.SimpleSensorData</class>
    <class>de.pgalise.simulation.shared.city.BaseGeoInfo</class>
    <class>de.pgalise.simulation.shared.city.Building</class>
    <class>de.pgalise.simulation.shared.city.BusAgency</class>
    <class>de.pgalise.simulation.shared.city.BusCalendar</class>
    <class>de.pgalise.simulation.shared.city.City</class>
    <class>de.pgalise.simulation.shared.city.NavigationEdge</class>
    <class>de.pgalise.simulation.shared.city.NavigationNode</class>
    <class>de.pgalise.simulation.shared.city.Way</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://127.0.0.1:5201/pgalise"/>
      <property name="javax.persistence.jdbc.password" value="somepw"/>
      <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
      <property name="javax.persistence.jdbc.user" value="pgalise"/>
      <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
      <property name="hibernate.hbm2ddl.auto" value="update"/>
      <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
			<!--the following disabled portability of the app to servers other than 
			glassfish, which is not really nice...-->
			<property name="hibernate.transaction.jta.platform" value="org.hibernate.service.jta.platform.internal.SunOneJtaPlatform" />
    </properties>
  </persistence-unit>
</persistence>
