<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="weather_collector" transaction-type="JTA">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <jta-data-source>pgalise</jta-data-source>
    <class>de.pgalise.simulation.shared.city.City</class>
    <class>de.pgalise.simulation.weather.model.DefaultServiceDataCurrent</class>
    <class>de.pgalise.simulation.weather.model.DefaultServiceDataForecast</class>
    <class>de.pgalise.simulation.weather.model.DefaultWeatherCondition</class>
    <class>de.pgalise.simulation.weather.model.StationDataAggregate</class>
    <class>de.pgalise.simulation.weather.model.StationDataNormal</class>
    <class>de.pgalise.util.weathercollector.model.DefaultServiceDataHelper</class>
    <class>de.pgalise.util.weathercollector.model.MyExtendedServiceDataCurrent</class>
    <class>de.pgalise.util.weathercollector.model.MyExtendedServiceDataForecast</class>
    <validation-mode>NONE</validation-mode>
    <properties>
      <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
      <!--<property name="eclipselink.ddl-generation" value="create-tables"/>-->
    </properties>
  </persistence-unit>
  <persistence-unit name="weather_collector_test" transaction-type="JTA">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <jta-data-source>pgaliseTest</jta-data-source>
    <class>de.pgalise.simulation.shared.city.City</class>
    <class>de.pgalise.simulation.weather.model.DefaultServiceDataCurrent</class>
    <class>de.pgalise.simulation.weather.model.DefaultServiceDataForecast</class>
    <class>de.pgalise.simulation.weather.model.DefaultWeatherCondition</class>
    <class>de.pgalise.simulation.weather.model.StationDataAggregate</class>
    <class>de.pgalise.simulation.weather.model.StationDataNormal</class>
    <class>de.pgalise.util.weathercollector.model.DefaultServiceDataHelper</class>
    <class>de.pgalise.util.weathercollector.model.MyExtendedServiceDataCurrent</class>
    <class>de.pgalise.util.weathercollector.model.MyExtendedServiceDataForecast</class>
    <properties>
      <!--<property name="eclipselink.ddl-generation" value="create-tables"/>-->
      <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
    </properties>
  </persistence-unit>
  <persistence-unit name="weather_collector_local" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <jta-data-source>pgalise</jta-data-source>
    <class>de.pgalise.simulation.shared.city.City</class>
    <class>de.pgalise.simulation.weather.model.DefaultServiceDataCurrent</class>
    <class>de.pgalise.simulation.weather.model.DefaultServiceDataForecast</class>
    <class>de.pgalise.simulation.weather.model.DefaultWeatherCondition</class>
    <class>de.pgalise.simulation.weather.model.StationDataAggregate</class>
    <class>de.pgalise.simulation.weather.model.StationDataNormal</class>
    <class>de.pgalise.util.weathercollector.model.DefaultServiceDataHelper</class>
    <class>de.pgalise.util.weathercollector.model.MyExtendedServiceDataCurrent</class>
    <class>de.pgalise.util.weathercollector.model.MyExtendedServiceDataForecast</class>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <!--<property name="eclipselink.ddl-generation" value="create-tables"/>-->
      <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
    </properties>
  </persistence-unit>
</persistence>
