<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="weather_collector_test" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>de.pgalise.simulation.shared.city.City</class>
    <class>de.pgalise.simulation.weather.model.Condition</class>
    <class>de.pgalise.simulation.weather.model.DefaultServiceDataCurrent</class>
    <class>de.pgalise.simulation.weather.model.DefaultServiceDataForecast</class>
    <class>de.pgalise.simulation.weather.model.StationDataAggregate</class>
		<class>de.pgalise.simulation.weather.model.StationDataNormal</class>
    <class>de.pgalise.util.weathercollector.model.DefaultExtendedServiceDataForecast</class>
    <class>de.pgalise.util.weathercollector.model.DefaultExtendedServiceDataCurrent</class>
    <properties>
      <property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>
    </properties>
  </persistence-unit>
</persistence>
