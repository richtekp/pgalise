<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">
	<persistence-unit name="GTFS_DATA" transaction-type="JTA">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>	
		<jta-data-source>pgalise</jta-data-source>
		<class>de.pgalise.util.datamodel.BusAgency</class>
		<class>de.pgalise.util.datamodel.BusCalendar</class>
		<class>de.pgalise.util.datamodel.BusRoute</class>
		<class>de.pgalise.util.datamodel.BusStop</class>
		<class>de.pgalise.util.datamodel.BusTrip</class>
		<class>de.pgalise.util.datamodel.BusStopTime</class>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
		<properties>
			<property name="hibernate.hbm2ddl.auto" value="create-drop"/>
		</properties>
	</persistence-unit>
</persistence>